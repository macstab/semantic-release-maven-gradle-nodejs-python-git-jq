{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {"type": "docs", "scope":"README", "release": "patch"},
          {"type": "chore", "release": "patch"},
          {"type": "refactor", "release": "patch"},
          {"type": "style", "release": "patch"},
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "revert", "release": "patch"},
          {"type": "dependencies", "release": "patch"},
          {"type": "security", "release": "minor"},
          {"type": "breaking", "release": "major"}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "angular",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "ğŸš€ Features"},
            {"type": "fix", "section": "ğŸ› Bug Fixes"},
            {"type": "chore", "section": "ğŸ§¹ Chores"},
            {"type": "docs", "section": "ğŸ“š Documentation"},
            {"type": "style", "section": "ğŸ’„ Styles"},
            {"type": "refactor", "section": "ğŸ”¨ Refactoring"},
            {"type": "perf", "section": "âš¡ Performance Improvements"},
            {"type": "test", "section": "ğŸ§ª Tests"},
            {"type": "build", "section": "ğŸ—ï¸ Build System"},
            {"type": "ci", "section": "ğŸš¦ Continuous Integration"},
            {"type": "revert", "section": "âª Reverts"},
            {"type": "wip", "section": "ğŸš§ Work In Progress"},
            {"type": "breaking", "section": "ğŸ’¥ Breaking Changes"},
            {"type": "dependencies", "section": "ğŸ”’ Dependency Updates"},
            {"type": "security", "section": "ğŸ›¡ï¸ Security Fixes"}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    "semantic-release-maven",
    "@semantic-release/github",
    [
      "@semantic-release/git",
      {
        "assets": ["pom.xml", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
      }
    ],
    "@saithodev/semantic-release-backmerge"
  ]
}
